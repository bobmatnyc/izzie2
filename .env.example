# OpenRouter API Key (for AI model access via OpenRouter)
OPENROUTER_API_KEY=sk-or-v1-xxxxx

# Database - Neon Postgres (serverless PostgreSQL with pgvector)
# Format: postgresql://user:password@host/database?sslmode=require
# Get from: https://console.neon.tech/
# Requires pgvector extension enabled in Neon console
DATABASE_URL=postgresql://user:password@host/database?sslmode=require

# Neo4j Graph Database (for knowledge graph)
NEO4J_URI=neo4j+s://xxxxx.databases.neo4j.io
NEO4J_USER=neo4j
NEO4J_PASSWORD=xxxxx

# Inngest (event-driven workflows)
INNGEST_EVENT_KEY=your_event_key
INNGEST_SIGNING_KEY=your_signing_key

# Webhook Secrets (for signature verification)
# GitHub: Set this in your GitHub App/Webhook settings
GITHUB_WEBHOOK_SECRET=your_github_webhook_secret
# Linear: Set this when creating webhooks in Linear settings
LINEAR_WEBHOOK_SECRET=your_linear_webhook_secret

# Google OAuth (for Calendar integration)
GOOGLE_CLIENT_ID=xxxxx.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=xxxxx

# Better Auth (authentication and session management)
# Generate with: openssl rand -base64 32
BETTER_AUTH_SECRET=your-secret-key-here

# Email Whitelist (optional - restrict sign-ups to specific emails)
# Comma-separated list of allowed emails. If not set, all emails are allowed.
# Example: ALLOWED_EMAILS=bob@matsuoka.com,alice@example.com
# ALLOWED_EMAILS=

# Telegram Bot (for notifications)
TELEGRAM_BOT_TOKEN=
TELEGRAM_WEBHOOK_SECRET=
# Public bot username (without @) for deep links in the UI
NEXT_PUBLIC_TELEGRAM_BOT_USERNAME=

# Next.js Environment
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3000

# E2E Testing (Playwright)
E2E_TEST_EMAIL=bob@matsuoka.com
